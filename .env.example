# Bife Environment Configuration
NODE_ENV=production
VERCEL=1
VERCEL_ENV=production

# AI Services (Gemini Only)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro-latest

# Solana Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Jupiter Aggregator (Latest V6)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Vercel Configuration
VERCEL_URL=https://your-project.vercel.app
NEXT_PUBLIC_VERCEL_URL=$VERCEL_URL
NEXT_PUBLIC_APP_URL=$VERCEL_URL

# App Configuration
APP_VERSION=2.1.0
APP_NAME=Bife
APP_DESCRIPTION=Bonk's AI DeFi Companion

# Feature Flags (Streamlined for Production)
ENABLE_BABYLON_VRM=false
ENABLE_CROSS_CHAIN=false
ENABLE_GEMINI_ONLY=true
ENABLE_3D_COMPANION=true

# Performance Settings (Optimized for Web)
MAX_AVATAR_POLYGONS=200000
TARGET_FPS=60
MEMORY_LIMIT_MB=512
BUNDLE_SIZE_LIMIT_MB=10
